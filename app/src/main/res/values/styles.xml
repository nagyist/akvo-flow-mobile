<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools">

    <style name="Flow.ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:backgroundStacked" tools:targetApi="14">@drawable/ab_stacked_solid_flow</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_flow</item>

        <item name="android:background" tools:targetApi="14">@drawable/ab_solid_flow</item>
        <item name="background">@drawable/ab_solid_flow</item>

        <item name="android:titleTextStyle" tools:targetApi="11">@style/Flow.ActionBar.Text</item>
        <item name="titleTextStyle">@style/Flow.ActionBar.Text</item>

        <item name="android:subtitleTextStyle" tools:targetApi="11">@style/Flow.ActionBar.Text</item>
        <item name="subtitleTextStyle">@style/Flow.ActionBar.Text</item>
    </style>

    <style name="Flow.PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/black_transparent</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="Flow.ActionBar.Tabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab</item>
        <item name="background">@drawable/tab_indicator_ab</item>
    </style>

    <style name="Flow.ActionBar.Text" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_text</item>
    </style>

    <style name="Flow.ActionBar.TabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/tab_text_color</item>
    </style>

    <style name="Flow.ListView" parent="@style/Widget.AppCompat.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/white</item>
    </style>

    <style name="button_primary">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/button_primary_text</item>
    </style>

    <style name="button_secondary">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/button_secondary_text</item>
    </style>

    <style name="button_tertiary">
        <item name="android:background">@drawable/button_tertiary</item>
        <item name="android:textColor">@color/button_tertiary_text</item>
    </style>

    <style name="Spinner">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/black_disabled</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/black_disabled</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:background">@drawable/image_button_background</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>